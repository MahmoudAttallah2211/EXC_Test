            <li><a asp-controller="Product" asp-action="Index" class="@(ViewContext.RouteData.Values["controller"].ToString() == "Product" ? "active" : "")">GetProducttAsync</a></li>

        </div> *@
        
    </div>
  
</body>
</html>
 